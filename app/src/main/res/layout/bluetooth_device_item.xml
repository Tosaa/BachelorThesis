<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/device_address"
                style="@style/AppTheme.TextView.Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/device_name"
                style="@style/AppTheme.TextView.Content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/device_type"
                style="@style/AppTheme.TextView.Content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/device_bonding_state"
                style="@style/AppTheme.TextView.Content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/connect_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect_button_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="connect LE" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect_button_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="connect Classic" />

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_show_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show"
            />
    </LinearLayout>
</layout>